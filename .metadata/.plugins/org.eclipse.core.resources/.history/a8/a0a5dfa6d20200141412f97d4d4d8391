public class Payload implements Serializable {

	private int opCode; 
	private int authCode;
	private Snapshot snapshot;
	
	// constuctor
	/**
	 * 서버와 통신에 이용되는 payload 에 필요한 정보를 담음.
	 * @param opCode : 동작코드 ( 1 : 파일전송 / 2 : 파일 다운로드 / 3 : 파일정보 읽기
	 */
	public Payload(){
		
	}
	
	/**
	 * �꽌踰꾩� �넻�떊�뿉 �씠�슜�릺�뒗 payload �뿉 �븘�슂�븳 �젙蹂대�� �떞�쓬.
	 * @param opCode : �룞�옉肄붾뱶 ( 1 : �뙆�씪�쟾�넚 / 2 : �뙆�씪 �떎�슫濡쒕뱶 / 3 : �뙆�씪�젙蹂� �씫湲�
	 */
	public Payload(int opCode){
		this.opCode = opCode;
	}
	
	/**
	 * �꽌踰꾩� �넻�떊�뿉 �씠�슜�릺�뒗 payload �뿉 �븘�슂�븳 �젙蹂대�� �떞�쓬.
	 * @param opCode : �룞�옉肄붾뱶 ( 1 : �뙆�씪�쟾�넚 / 2 : �뙆�씪 �떎�슫濡쒕뱶 / 3 : �뙆�씪�젙蹂� �씫湲�
	 * @param authCode : �씤利앹퐫�뱶 ( mobile �뿉�꽌 �깮�꽦 )
	 */
	public Payload(int opCode, int authCode){
		this.opCode = opCode;
		this.authCode = authCode;
	}
	
	public int getOpCode(){
		return this.opCode;
	}
	
	public int getAuth(){
		return this.authCode;
	}
	
	public void setOpCode(int opCode){
		this.opCode = opCode;
	}
	
	public void setAuth(int authCode){
		this.authCode = authCode;
	}
	
	public void setSnapshot(Snapshot snapshot){
		this.snapshot = snapshot;
	}
	
}
