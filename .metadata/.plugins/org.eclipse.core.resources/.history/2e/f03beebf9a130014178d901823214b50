		super();

		this.inflater = LayoutInflater.from(c);
		this.groupList = groupList;
		this.childList = childList;
		this.destList = destList;
		this.mchildDestList = mchildDestList;
		this.menuNumber = menuNumber;
	}

	
	
	
	@Override
